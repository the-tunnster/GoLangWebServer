{{template "base" .}}

{{define "content"}}

<div class="container">

    <div class="row">
        <h1 class="mt-5">Search for availability.</h1>
    </div>

    <form action="" method="GET" novalidate class="needs-validation">

        <div class="row">
            <div class="col">
                <div class="row" id="reservationDates">
                    <div class="col">
                        <input required type="text" class="form-control" name="start" placeholder="Arrival Date">
                    </div>
                    <div class="col">
                        <input required type="text" class="form-control" name="end" placeholder="Departure Date">
                    </div>
                </div>
            </div>
        </div>

        <hr>

        <div class="row mt-3">
            <div class="col">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

    <div class="row">
        <div class="col">
            <p id="myParagraph">
                Text.
            </p>
            <p>
                <button id="colorButton" class="btn btn-outline-secondary">Click Me.</button>
            </p>
        </div>
    </div>

</div>

{{end}}


{{define "js"}}

<script>
    const elem = document.getElementById("reservationDates");
    const rangepicker = new DateRangePicker(elem, {
        format: "yyyy-mm-dd",
    });
</script>

{{end}}